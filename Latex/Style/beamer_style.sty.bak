\newcommand{\supervisor}[1]{\def\@sperv{#1}}
\newcommand{\betreuer}[1]{\def\@Betreuer{#1}}

\renewcommand{\maketitle}{
\begin{titlepage}
	\centering
	\@ifundefined{@Logo}{}{\includegraphics[width=0.5\textwidth]{\@Logo}}\par\vspace*{1cm}
	{\scshape\LARGE \@ifundefined{@institutionlong}{}{\@institutionlong}  \par}
	\vspace{3.5cm}
	{\huge\bfseries \@title  \par}
	\vspace{2cm}
	{\Large\itshape \@author \par}
	\vfill
	\@ifundefined{@sperv}{}{supervised by \\ \@sperv}
	\@ifundefined{@Betreuer}{}{Betreuer: \\ \@Betreuer}
	\vfill

% Bottom of the page
	{\large \today\par}
\end{titlepage}


\newcommand{\plain}{
